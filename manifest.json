{
    "manifest_version": 3,
    "name": "TextSearch",
    "description": "Select text and easily search about it on your favourite search engine",
    "version": "1.0.0",
    "icons": {
        "128": "images/icon.png"
    },
    "action": {
        "default_icon": {
            "32": "images/icon.png"
        },
        "default_popup": "index.html",
        "default_title": "Open Popup"
    },
    "permissions": ["contextMenus", "storage"],
    "background": {
        "service_worker": "background.js"
    }
}